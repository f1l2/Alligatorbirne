<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>

	<appender name="CON" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date{dd.MM.yyyy HH:mm:ss} [%-5.5level] [%-15.15thread]
				%-30.30logger{36} - %msg %n</pattern>
		</layout>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${user.home}/alligatorbirne/logs/ep.log</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${logback.file}.%i.zip</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>10</maxIndex>
		</rollingPolicy>

		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>10MB</maxFileSize>
		</triggeringPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date{dd.MM.yyyy HH:mm:ss.SSS} [%-5.5level] [%-15.15thread]
				%-30.30logger{36} - %msg %n</pattern>
		</layout>
	</appender>

	<appender name="DB" class="ch.qos.logback.classic.db.DBAppender">
		<connectionSource
			class="ch.qos.logback.core.db.DriverManagerConnectionSource">
			<driverClass>org.hsqldb.jdbcDriver</driverClass>
			<url>jdbc:hsqldb:hsql://localhost:9001/logdb</url>
			<user>SA</user>
			<password></password>
		</connectionSource>
	</appender>

	<logger name="event.processing" level="INFO" >
		<appender-ref ref="DB" />
		<appender-ref ref="CON" />
	</logger>
	
	<root>
		<level value="ERROR" />
		<appender-ref ref="CON" />
	</root>

</configuration>
